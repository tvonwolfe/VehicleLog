<%= form_with url: login_authentication_index_path do |form| %>
  <div class="my-4 w-full">
    <div class="text-slate-700 mb-1">
      <%= form.label :email %>
    </div>
    <div class="w-full">
      <%= form.email_field :email, 
        required: true,
        placeholder: 'name@example.com',
        class: "text-slate-700 required ring-0 border-slate-300 w-full h-10 px-4 rounded transition focus:ring-blue-300" 
      %>
  </div>
  </div>
  <div class="my-4 w-full">
    <div class="text-slate-700 mb-1">
      <%= form.label :password %>
    </div>
    <div class="w-full">
      <%= form.password_field :password, 
        required: true,
        placeholder: "Password",
        class: "text-slate-700 required ring-0 border-slate-300 w-full h-10 px-4 rounded transition focus:ring-blue-300" 
      %>
    </div>
  </div>
  <%= render SubmitButtonComponent.new(form: form, text: "Sign In", clicked_text: "Signing In...") %>
<% end %>
