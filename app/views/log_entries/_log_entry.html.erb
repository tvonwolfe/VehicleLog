<div id="<%= dom_id log_entry %>">
  <% if action_name != "show" %>
    <%= link_to "Show this log entry", log_entry, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this log entry", edit_log_entry_path(log_entry), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
