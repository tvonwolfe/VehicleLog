<%= content_for :title, "Sign In" %>
<div class="mx-auto w-full sm:w-100 sm:p-10 rounded-md sm:border border-solid border-slate-200 sm:shadow-md">
  <div class="sm:pb-4 font-bold text-center text-2xl text-slate-600">
    <h2>Sign In</h2>
  </div>
  <div class="mx-auto sm:w-80">
    <%= form_with url: login_authentication_index_path do |form| %>
      <div class="my-4 w-full">
        <div class="text-slate-700 mb-1">
          <%= form.label :email %>
        </div>
        <div class="w-full">
          <%= form.email_field :email, 
            required: true,
            placeholder: 'name@example.com',
            class: "required ring-0 border-slate-300 w-full h-10 px-4 rounded transition focus:ring-blue-300" 
          %>
      </div>
      </div>
      <div class="my-4 w-full">
        <div class="text-slate-700 mb-1">
          <%= form.label :password %>
        </div>
        <div class="w-full">
          <%= form.password_field :password, 
            required: true,
            placeholder: "Password",
            class: "required ring-0 border-slate-300 w-full h-10 px-4 rounded transition focus:ring-blue-300" 
          %>
      </div>
      </div>
      <%= render 'shared/submit', locals: { form: form, cta: "Sign In"} %>
    <% end %>
  </div>
</div>
